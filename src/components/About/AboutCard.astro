---

import { Image } from "astro:assets"

const { data } = Astro.props

---
<section>
    <article class={data.variant}>
        <div class="img_container">
            <Image src={data.img} alt="" style={data.style} />
        </div>
        <div class="text_container">
            <h1 class="heading_2">{data.title}</h1>
            <p class="lead">{data.lead}</p>
                {data.body.map(body =>{
                    return <p>{body}</p>
                } )}
        </div>        
    </article>
</section>
<style>

    section {
        padding: 2rem 0;
    }

    article {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: var(--box-color);
        padding: var(--top_btm) var(--side);
    }
    .img_container {
        position: relative;
        width: 100%;
        height: 200px;
        min-width: 280px;
        max-width: 312px;
    }

    img {
        left: 50%;
        bottom: var(--medium);
        position: absolute;
        width: 184px;
        height: 280px;
        object-fit: cover;
        filter: var(--card);
    }

    @media (min-width: 630px) {
        article {
            flex-direction: row;
            gap: var(--medium);
        }

        .img_container {
            min-height: 480px;
        }

        img {
            width: auto;
            max-width: 100%;
        }

        .primary img {
            height: 544px;
            left: 8rem;
            bottom: 0;
        }

        .secondary .img_container {
            order: 1;
        }

        .secondary img {
            height: 480px;
            right: 10rem;
        }
    }
    
    @media (min-width: 960px) {
        .img_container {
            min-height: 312px;
        }

        img {
            bottom: -4rem;
        }

        .primary img {
            bottom: -6rem;
        }
    }
</style>  
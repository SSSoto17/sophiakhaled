---


<section class="break_main">
    <article>
        <header>
            <h1 class="heading_1 caps">Shop Collection</h1>
            <h2 class="subheading_scribble">Shop pieces from the collection</h2>
        </header>
        <ul>
            {products.map(item=>{
            return <li><Card data={item} page="collections" text_align="center"/></li>
        })}
        </ul>
        <div class="link"><ScribbleButton label="See more" href="/shop" /></div>
        
    </article>
</section>

<style>

    section {
        display: grid;
        grid-template-columns:
            minmax(var(--side), 1fr) minmax(var(--content-min), var(--content-max))
            minmax(var(--side), 1fr);
        background-color: var(--box-color);
        padding: var(--top_btm) var(--none);
    }
    
    article {
        grid-column: 2;
        display: flex;
        flex-direction: column;
    }

    header {
        display: flex;
        flex-direction: column;
        gap: var(--small);
        padding: var(--medium) var(--none);
    }

    ul {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: var(--small) var(--medium);
    }

    .link {
        display: flex;
        justify-content: center;
        width: 100%;
    }


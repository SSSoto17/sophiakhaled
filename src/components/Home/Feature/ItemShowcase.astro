---
import Item from "../../Collections/ItemFeature/Item.astro"
import bat from '../../../img/regular/flagermus.png';
import blouse from '../../../img/regular/blue_blouse.png'
import socks from '../../../img/regular/socks.png'
import Image from "astro/components/Image.astro";
import Rectangle from "../../../img/regular/pink_rectangle.png"

---
<article class="container">
    <div>
        <Item
        src={blouse} alt="BLUE PRINCESS BLOUSE"
        direction="above"
        label="BLUE PRINCESS BLOUSE"
        variant="b"
        />
    </div>
    <div>
        <Item
        src={socks} alt="CHESS SOCKS"
        direction="below"
        label="CHESS SOCKS"
        variant="a"
        />
    </div>
      <div>
        <Item
        src={bat} alt="BAT BAG"
        direction="above"
        label="BAT BAG"
        variant="b"
        />
    </div>
    <div class="pink_bagground"> <Image src={Rectangle} alt="pink rectangle"/></div>
</article>

<style>

    .container{
        display: grid;
        grid-template-columns: 1fr 1fr;
        min-width: 150px;
        margin-bottom: 1rem;
    }
    .container>:first-child{
        grid-column: 2;
        grid-row: 1/4;
    }
    .container>:nth-child(2){
        grid-column: 1;
        grid-row: 3/7;
        justify-self: center;
        align-items: center;

    }
    .container>:nth-child(3){
        grid-column: 2;
        grid-row: 6/9;
    }

    .pink_bagground{
        grid-area: 1/5;
          z-index: -1;
          position: absolute;
          justify-self: center;
          align-self: center;
    }

    @media (min-width: 630px){
        .container{
            margin-bottom: 6rem
        }

        .pink_bagground{
            scale: 0.8;
        }
    }

    @media (min-width: 900px){
       

        .pink_bagground{
            scale: 1;
        }

    }

</style>

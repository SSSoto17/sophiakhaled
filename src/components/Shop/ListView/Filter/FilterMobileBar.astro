---

import FilterCatList from "./FilterCatList.astro"

const cat = [
    {
        name: "Category",
        options: [
            "Tops", "Bottoms", "Dresses", "Accessories"
        ]
    },
    {
        name: "Collection",
        options: [
            "Middleschool u r dead to me...", "If i dont see the prince, im going to die..."
        ]
    }
]

---

<div class="container">
    <img src="/svg/icon_Filter.svg" alt="">
</div>
<div class="options">
    {cat.map(cat=>{
        return <FilterCatList heading={cat.name} options={cat.options} />
    })}
</div>

<style>

    .container {
        width: 100%;
        height: 3rem;
        background-color: var(--box-color);
        border: 1px solid var(--stroke-color);
        display: flex;
        justify-content: center;
        align-items: center;
        filter: var(--dropshadow);
        cursor: pointer;
    }
    
    .options {
        padding: var(--side);
        border: 1px solid var(--stroke-color);
        filter: var(--dropshadow);
    }

    img {
        --size: 2rem;
        width: var(--size);
        height: var(--size);
        background-color: none;
    }

    @media(min-width: 960px) {
        .container, .options {
            display: none;
        }
    }

</style>
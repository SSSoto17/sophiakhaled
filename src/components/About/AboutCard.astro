---
const {h2, text, text2, text3, img, side, alt} = Astro.props;
import RegImage from "../Basics/img/RegImage.astro";
import "../../css/global.css";

---

<section class="container">
    <article class="card">
        <div className={`box ${side}`} >
            <div class="img_container item" class={side}>
                <img class="photo"  src={img} alt={alt}>
            </div>
            <div class="text_container item">
                <h2 class="heading_2">{h2}</h2>
                <p>{text}</p>
                <p>{text2}</p>
                <p>{text3}</p>
            </div>
        </div>
    </article>
</section>
<style>

.right{
    flex-direction: row-reverse;
}

.left{
    flex-direction: row;
}

    .container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 17rem;        
    }
    .card{
        background-color: #E2D9E5;
        max-width: 1120px;
        margin-left: 2rem;
        margin-right: 2rem;

    }
    .img_container{
        height: 150px;
        position: relative;
        overflow: visible;
        position: relative;
        width: 100%;
        justify-content: center; 
        max-width: 270px;
    }

    .photo{
        width: 100%; 
        align-self: center;
        justify-self: center;
        text-align: center;
        position: absolute;
        top: -270px;
    }

    
    .sophia{
        width: 448px;

    }

  
    p{
        font-size: var( --body-size);
        line-height: 24px;
        margin: 0;
    }

    .about{
        max-width: var(--content-max);
    }

    .text_container{
        display: flex;
        flex-direction: column;
        gap:16px;
        width: 100%;
        box-sizing: border-box; /* Ensures padding and border are included in the width/height */;
        
    }

    .box{
        display: flex;
        flex-wrap:wrap;  
        justify-content: center;
        padding:var(--large);
        gap:2rem; 
}
@media (min-width: 750px){
  
    .text_container{
    display: flex;
    flex-direction: column;
    gap:16px;
    box-sizing: border-box; 
}
    .img_container{
    overflow: visible;
    position: relative;
    width: 100%;
    flex-grow: 1;
    max-width: 500px; 
}
.photo{
    top:-150px;
}
.item{
    flex:1 1 100px;
    min-width:200px;
}
.photo{
     top: -70px;
    }

     .container{
        margin-top: 7rem;
        
    }
    }
    @media (min-width: 930px){
    .img_container{
         max-width: 400px;  

    }
    .text_container{
        max-width: 700px;
    }
    .photo{
    top:-130px;
}
  
}

    
</style>  
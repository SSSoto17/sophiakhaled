---
import { Image } from "astro:assets";

const { src, variant, alt } = Astro.props;
import PlaceholderImage from "../../../img/regular/7967A9EB-2BD9-41E7-ADA9-1D7D1690C969.JPEG";
---

<!-- For regular images; these will be nested inside other image components -->
<Image src={PlaceholderImage} class={variant} alt={alt} />

<style>
  .regular {
    background-color: var(--lavender);
    aspect-ratio: 1/1.5;
    max-width: 400px;
  }

  .tape {
    background-color: var(--lavender);
  }

  .opacity {
    background-color: var(--lavender);
    filter: opacity(75%);
  }
</style>

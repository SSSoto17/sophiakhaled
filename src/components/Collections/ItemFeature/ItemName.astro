---
const { label, position } = Astro.props;
---

<div class={position}>
  <p class="item">{label}</p>
  <img src="/strokes/item_arrow.svg" alt="">
  
</div>

<style>
  div {
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: var(--x-small);
  }

  img {
    max-height: 4rem;
  }

  .below img {
    order: -1;
    transform: rotate(180deg);
  }

</style>

---

import FilterMobileBar from "../Filter/FilterMobileBar.astro"
import FilterCatList from "../Filter/FilterCatList.astro"
import ArrowButton from "../../../Basics/buttons/ArrowButton.astro"

const cat = [
    {
        name: "Category",
        options: [
            "Tops", "Bottoms", "Dresses", "Accessories"
        ]
    },              
    {
        name: "Collection",
        options: [
            "Middleschool u r dead to me...", "If i dont see the prince, im going to die..."
        ]
    }
]


---

<FilterMobileBar />
<div class="container">
    {cat.map(cat=>{
        return <FilterCatList heading={cat.name} options={cat.options} />
    })}
    <ArrowButton />
</div>

<style>

.container {
        padding: var(--side);
        border-bottom: 1px solid var(--stroke-color);
        filter: var(--dropshadow);
    }

    @media (min-width: 960px) {
        .container {
        min-width: 283px;
        max-width: 352px;
        border-bottom: none;
        border-right: 1px solid var(--stroke-color);
        padding: 0 var(--small) 0 0;
        filter: none;
        }
    }

</style>




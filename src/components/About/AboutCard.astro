---
const {h2, text, text2, text3, person, side} = Astro.props;
import RegImage from "../Basics/img/RegImage.astro";
---

<section class="about">
    <article class="card">
        <div class="box" class={person}>
            <div class="img_container" class={side}>
                <img class="photo"  src="../../../public/sophia.svg" alt="">
            </div>
            <div class="text_container">
                <h2 class="heading_2">{h2}</h2>
                <p>{text}</p>
                <p>{text2}</p>
                <p>{text3}</p>
            </div>
        </div>
    </article>
</section>

<style>
    .card{
        background-color: #E2D9E5;

    }


    .img_container{
        height: 200px;
        position: relative;
        display: flex;
        overflow: visible;
        position: relative;
        width: 100%;
        justify-content: center; 
    
    }

    .photo{
        width: 50%; 
        align-self: center;
        justify-self: center;
        text-align: center;
        position: absolute;
        top: -200px;
       /*  position: absolute;
        max-width: 300px;
        top:-250px;
        right:0 */

    }

   /*  .sophia{
        width: 448px;

    }

    .katrine{
        width: 400px;

    } */

    p{
        font-size: var( --body-size);
        line-height: 24px;
        margin: 0;
    }

    .about{
        max-width: var(--content-max);
    }

    .text_container{
        display: flex;
        flex-direction: column;
        gap:16px;
        width: 100%;
        box-sizing: border-box; /* Ensures padding and border are included in the width/height */;
        
    }

    .box{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding:var(--large);
        gap:1rem;
        
        
    }
    @media (min-width: 688px){
        .box{
            display: flex;
            flex-direction: row;
            
        }

         .text_container{
        display: flex;
        flex-direction: column;
        gap:16px;
        max-width: 400px;
        box-sizing: border-box; /* Ensures padding and border are included in the width/height */
    }
     .img_container{
        overflow: visible;
        position: relative;
        width: 100%;
        flex-grow: 1;  
    }
    }



    

  
    
</style>
<style>
    .burgermenu {
        display: flex;
        flex-direction: row;
        align-items: end;
        justify-content: space-between;
        padding-right: 1rem;
        align-items: center;

    }

    .flex_icons{
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    .menu-btn {
        cursor: pointer;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        height: 24px;
        width: 30px;
    }

    .menu-btn .line {
        width: 100%;
        height: 2px;
        background-color: #000;
    }

    .burger-menu-content {
        display: none;
        position: absolute;
        top: 60px;
        right: 0;
        background-color: white;
        width: 200px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 1000;
    }

    .burger-menu-content ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    .burger-menu-content ul li {
        padding: 12px 16px;
        border-bottom: 1px solid #ddd;
    }

    .burger-menu-content ul li a {
        text-decoration: none;
        color: black;
        display: block;
    }

    .burger-menu-content ul li:hover {
        background-color: #f1f1f1;
    }

    @media (min-width: 630px){
        nav{
            display: none;
        }

    }
</style>

    
<script>
    document.querySelector("#menu-btn").addEventListener("click", openBurgerMenu);
    window.addEventListener('resize', handleResize);

    function openBurgerMenu() {
        const burgerMenu = document.querySelector("#burger-menu-content");
        if(burgerMenu.style.display === "block") {
            burgerMenu.style.display = "none";
        } else {
            burgerMenu.style.display = "block";    
        }
    }

    function handleResize() {
        const burgerMenuContent = document.querySelector('#burger-menu-content');
        if (window.innerWidth > 1168) {
            burgerMenuContent.style.display = 'flex'; 
        } else {
            burgerMenuContent.style.display = 'none'; 
        }
    }
</script>
